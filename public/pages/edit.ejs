
<div class="jumbotron text-center">
    <h1>Edit Video</h1>

</div>

<div ng-controller="videoController">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">

            <form ng-submit="makeEdits()"
                  style="margin-top:30px;">
                <h3>Video Detail editor</h3>


                <div class="form-group" align="center">

                    Change what users will see as the video Title <br>
                    <input type="text"
                           class="form-control"
                           placeholder=""
                           ng-model="formData.vidName"
                           ng-style="{'width': auto}"></input>
                </div>
                <!-- <div class="form-group" align="center">
                    <input type="text"
                           class="form-control"
                           placeholder="Video id"
                           ng-model="formData.vidId"
                           ng-style="{'width': auto}"></input>
                </div> -->
                <div class="form-group" align="center">
                    Change your username! <br>
                    <input type="text"
                           class="form-control"
                           placeholder=""
                           ng-model="formData.user"
                           ng-style="{'width':auto}"></input>
                </div>
                <button type="submit" class="btn btn-primary">Save Edit</button>
            </form>

        </div>
    </div>
</div>